{
	"meta": {
		"name": "Krieg",
		"source": "http://www.di.fc.ul.pt/~jpn/gv/krieg.htm",
		"tags": ["infiltrate","multiplegoals"]
	},
	"board": { "width": 4, "height": 4 },
	"graphics": {
		"tiles": { "corners": "grass", "bases": "castle" },
		"icons": { "notfrozens": "knights", "frozens": "rooks" }
	},
	"terrain": {
		"southeast": [ ["positions",[1001,3003]] ],
		"northwest": [ ["positions",[2002,4004]] ],
		"corners": [ {"owner":1,"pos":1001}, {"owner":2,"pos":4004} ],
		"bases": [
			["positions",[1002,2001,2002],1],
			["positions",[3003,3004,4003],2]
		]
	},
	"setup": {
		"notfrozens": [
			["rectangle",1001,2002,1],
			["rectangle",3003,4004,2]
		]
	},
	"marks": {
		"selectunit": {
			"from": "mynotfrozens",
			"runGenerators": ["findmovetargets"],
			"allow": [["mark","selectmove"]]
		},
		"selectmove": {
			"from": "movetargets",
			"allow": [["command","move"]]
		}
	},
	"startturn": {
		"allow": [["mark","selectunit"]]
	},
	"endturn": {
		"endgame": {
			"cornerinfiltration": {
				"condition": ["overlaps","myunits","oppcorners"], "result": "win"
			},
			"occupation": {
				"condition": ["same",["overlapsize","myunits","oppbases"],2], "result": "win"
			}
		}
	},
	"commands": {
		"move": {
			"applyEffects": [
				["forallin","myfrozens",
					["setunitdata",["loopid"],"group","notfrozens"]
				],
				["moveunit",["idofunitat","selectunit"],"selectmove"],
				["setunitdata",["idofunitat","selectunit"],"group","frozens"]
			],
			"allow": [["endturn"]]
		}
	},
	"generators": {
		"findmovetargets": {
			"type": "nextto",
			"starts": "selectunit",
			"condition": ["noneat","units",["contextpos","target"]],
			"dirs": ["ifelse",
				["anyat","southeast",["contextpos","start"]],
				["dirs",[1,3,4,5,7]],
				["ifelse",
					["anyat","northwest",["contextpos","start"]],
					["dirs",[1,3,5,7,8]],
					["dirs",[1,3,5,7]]
				]
			],
			"draw": {
				"start": {
					"condition": ["different",["contextval","neighbourcount"],0],
					"tolayer": "movers",
					"include": {
						"owner": ["lookup","units",["contextpos","start"],"owner"]
					}
				},
				"target": {
					"tolayer": "movetargets",
					"include": {
						"moverid": ["idofunitat",["contextpos","start"]],
						"owner": ["lookup","units",["contextpos","start"],"owner"]
					}
				}
			}
		}
	}
}