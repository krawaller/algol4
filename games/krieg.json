{
	"source": "http://www.di.fc.ul.pt/~jpn/gv/krieg.htm",
	"board": {
		"width": 4,
		"height": 4
	},
	"terrain": {
		"southeast": [ ["positions",[1001,3003],{}] ],
		"northwest": [ ["positions",[2002,4004],{}] ],
		"corners": [ {"owner":1,"pos":1001}, {"owner":2,"pos":4004} ],
		"bases": [
			["positions",[1002,2001,2002],{"owner":1}],
			["positions",[3003,3004,4003],{"owner":2}]
		]
	},
	"setup": [
		["rectangle",1001,2002,{"owner":1,"group":"notfrozens"}],
		["rectangle",3003,4004,{"owner":2,"group":"notfrozens"}]
	],
	"marks": {
		"selectunit": {
			"fromlayer": "mymovers",
			"cleanse": ["currentmoves"],
			"hydration": ["findcurrentmoves"]
		},
		"selectmove": {
			"neededmarks": ["selectunit"],
			"fromlayer": "currentmoves"
		}
	},
	"startturn": {
		"hydration": ["findmovetargets"]
	},
	"endturn": {
		"condition": ["same",["contextval","performedsteps"],1],
		"commandcap": true,
		"endgame": {
			"cornerinfiltration": {
				"condition": ["overlap","myunits","oppcorners"]
			},
			"occupation": {
				"condition": ["same",["overlapsize","myunits","oppbases"],2]
			},
			"oppcantmove": {
				"condition": ["isempty","oppmovers"]
			}
		}
	},
	"commands": {
		"move": {
			"neededmarks": ["selectunit","selectmove"],
			"condition": ["notempty","forwardfooting"],
			"effect": ["multieffect",
				["forallin","myfrozens",
					["setunitdata",["contextval","loopid"],"group","notfrozens"]
				],
				["moveunit",["idofunitat",["markpos","selectunit"]],["markpos","selectmove"]],
				["setunitdata",["contextval","loopid"],"group","frozens"]
			]
		}
	},
	"generators": {
		"findcurrentmoves": {
			"type": "filter",
			"layer": "mymovetargets",
			"matching": {"moverid":["idofunitat",["markpos","selectunit"]]},
			"tolayer": "currentmoves"
		},
		"findmovetargets": {
			"type": "nextto",
			"from": ["allposinlayer","notfrozens"],
			"condition": ["noneat","units",["contextpos","target"]],
			"dirs": ["ifelse",
				["anyat","southeast",["contextpos","start"]],
				["dirs",[1,3,4,5,7]],
				["ifelse",
					["anyat","northwest",["contextpos","start"]],
					["dirs",[1,3,5,7,8]],
					["dirs",[1,3,5,7]]
				]
			],
			"draw": {
				"start": {
					"condition": ["different",["contextval","neighbourcount"],0],
					"tolayer": "movers",
					"include": {
						"owner": ["lookup","units",["contextpos","start"],"owner"]
					}
				},
				"target": {
					"tolayer": "movetargets",
					"include": {
						"moverid": ["idofunitat",["contextpos","start"]],
						"owner": ["lookup","units",["contextpos","start"],"owner"]
					}
				}
			}
		}
	}
}