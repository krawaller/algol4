{
	"name": "Krieg",
	"source": "http://www.di.fc.ul.pt/~jpn/gv/krieg.htm",
	"board": {
		"width": 4,
		"height": 4
	},
	"graphics": {
		"tiles": { "corners": "grass", "bases": "castle" },
		"icons": { "notfrozens": "soldier", "frozens": "frozen" }
	},
	"terrain": {
		"southeast": [ ["positions",[1001,3003],{}] ],
		"northwest": [ ["positions",[2002,4004],{}] ],
		"corners": [ {"owner":1,"pos":1001}, {"owner":2,"pos":4004} ],
		"bases": [
			["positions",[1002,2001,2002],{"owner":1}],
			["positions",[3003,3004,4003],{"owner":2}]
		]
	},
	"setup": {
		"notfrozens": [
			["rectangle",1001,2002,{"owner":1}],
			["rectangle",3003,4004,{"owner":2}]
		]
	},
	"marks": {
		"selectunit": {
			"fromlayer": "mymovers",
			"cleanse": ["currentmoves"],
			"rungenerators": ["findcurrentmoves"],
			"requiredby": ["selectmove"]
		},
		"selectmove": {
			"neededmarks": ["selectunit"],
			"fromlayer": "currentmoves"
		}
	},
	"startturn": {
		"rungenerators": ["findmovetargets"]
	},
	"endturn": {
		"condition": ["same",["contextval","performedsteps"],1],
		"commandcap": true,
		"endgame": {
			"cornerinfiltration": {
				"condition": ["overlaps","myunits","oppcorners"], "result": "win"
			},
			"occupation": {
				"condition": ["same",["overlapsize","myunits","oppbases"],2], "result": "win"
			},
			"oppcantmove": {
				"condition": ["isempty","oppmovers"], "result": "win"
			}
		}
	},
	"commands": {
		"move": {
			"neededmarks": ["selectunit","selectmove"],
			"condition": ["notempty","currentmoves"],
			"effect": ["multieffect",[
				["forallin","myfrozens",
					["setunitdata",["loopid"],"group","notfrozens"]
				],
				["moveunit",["idofunitat",["markpos","selectunit"]],["markpos","selectmove"]],
				["setunitdata",["idofunitat",["markpos","selectunit"]],"group","frozens"]
			]],
			"rungenerators": ["findoppmovers"]
		}
	},
	"generators": {
		"findoppmovers": {
			"type": "nextto",
			"starts": ["allposinlayer","oppnotfrozens"],
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"condition": ["noneat","units",["contextpos","target"]],
			"draw": {
				"start": {
					"condition": ["truthy",["contextval","neighbourcount"]],
					"tolayer": "oppmovers"
				}
			}
		},
		"findcurrentmoves": {
			"type": "filter",
			"layer": "mymovetargets",
			"matching": {"moverid":["is",["idofunitat",["markpos","selectunit"]]]},
			"tolayer": "currentmoves"
		},
		"findmovetargets": {
			"type": "nextto",
			"starts": ["allposinlayer","notfrozens"],
			"condition": ["noneat","units",["contextpos","target"]],
			"dirs": ["ifelse",
				["anyat","southeast",["contextpos","start"]],
				["dirs",[1,3,4,5,7]],
				["ifelse",
					["anyat","northwest",["contextpos","start"]],
					["dirs",[1,3,5,7,8]],
					["dirs",[1,3,5,7]]
				]
			],
			"draw": {
				"start": {
					"condition": ["different",["contextval","neighbourcount"],0],
					"tolayer": "movers",
					"include": {
						"owner": ["lookup","units",["contextpos","start"],"owner"]
					}
				},
				"target": {
					"tolayer": "movetargets",
					"include": {
						"moverid": ["idofunitat",["contextpos","start"]],
						"owner": ["lookup","units",["contextpos","start"],"owner"]
					}
				}
			}
		}
	}
}