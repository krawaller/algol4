{
	"name": "Gogol",
	"source": "http://www.di.fc.ul.pt/~jpn/gv/gogol.htm",
	"board": {"height":8,"width":8},
	"terrain": {
		"homerow": [ ["rectangle",1001,1008,{"owner":2}], ["rectangle",8001,8008,{"owner":1}] ],
		"edges": [ ["rectangle",1001,8001], ["rectangle",1008,8008], ["rectangle",1002,1007], ["rectangle",8002,8007] ]
	},
	"graphics": {
		"tiles": {"homerow":"castle"},
		"icons": {"kings":"kings","soldiers":"soldiers"}
	},
	"setup": {
		"soldiers": [ ["rectangle",1001,1008,{"owner":2}], ["rectangle",8001,8008,{"owner":1}] ]
	},
	"startturn": {
		"rungenerators": ["findforbiddenkingspots","findforbiddensoldierspots"]
	},
	"generators": {
		"findforbiddenkingspots": {
			"type": "nextto",
			"starts": ["intersect","edges","mysoldiers"],
			"dirs": ["ifelse",["anyat","homerow",["contextpos","start"]],["dirs",[1,3,5,7]],["dirs",[1,5]]],
			"draw": {
				"target": {
					"tolayer": "nokings"
				}
			}
		},
		"findforbiddensoldierspots": {
			"type": "nextto",
			"dirs": ["dirs",[1,3,5,7]],
			"starts": "mykings",
			"condition": ["or",[
				["anyat","homerow",["contextpos","target"]],
				["and",[
					["anyat","edges",["contextpos","start"]],
					["anyat","edges",["contextpos","target"]]
				]]
			]],
			"draw": {
				"target": {
					"tolayer": "nosoldiers"
				}
			}
		},
		"findkingwalktargets": {
			"type": "walker",
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"starts": ["union","mykings","selectunit"],
			"blocks": "units",
			"draw": {
				"steps": {
					"condition": ["noneat","nokings",["contextpos","target"]],
					"tolayer": "kingwalk"
				}
			}
		},
		"findadjacentenemies": {
			"type": "nextto",
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"starts": "selectunit",
			"condition": ["anyat","oppunits",["contextpos","target"]],
			"draw": {
				"target": {
					"tolayer": "adjacentenemies",
					"include": {
						"dir": ["contextval","dir"]
					}
				}
			}
		},
		"findjumptargets": {
			"type": "nextto",
			"starts": "adjacentenemies",
			"dirs": ["relativedirs",["dirs",[1]],["lookup","adjacentenemies",["contextpos","start"],"dir"]],
			"condition": ["noneat",["union","units",["ifelse",["anyat","mykings","selectunit"],"nokings","nosoldiers"]],["contextpos","target"]],
			"draw": {
				"start": {
					"condition": ["truthy",["contextval","neighbourcount"]],
					"tolayer": "willdie"
				},
				"target": {
					"tolayer": "jumptargets",
					"include": {
						"dir": ["contextval","dir"]
					}
				}
			}
		}
	},
	"marks": {
		"selectkingdeploy": {
			"condition": ["morethan",3,["contextval","turn"]],
			"from": ["subtract","board",["union","units","nokings"]]
		},
		"selectunit": {
			"condition": ["morethan",["contextval","turn"],2],
			"from": "myunits",
			"rungenerators": ["findkingwalktargets","findadjacentenemies","findjumptargets"],
			"cleanse": ["kingwalk","adjacentenemies","jumptargets","willdie"],
			"requiredby": ["selectmovetarget","selectjumptarget"]
		},
		"selectmovetarget": {
			"requiredmarks": ["selectunit"],
			"from": ["ifelse",["anyat","mykings","selectunit"],"kingwalk",["subtract","board",["union","units",["union","nosoldiers","jumptargets"]]]],
			"notifhasmark": ["selectjumptarget"]
		},
		"selectjumptarget": {
			"requiredmarks": ["selectunit"],
			"from": "jumptargets",
			"notifhasmark": ["selectmovetarget"]
		}
	},
	"commands": {
		"deployking": {
			"requiredmarks": ["selectkingdeploy"],
			"effect": ["spawnunit","selectkingdeploy","kings",{"owner":["contextval","currentplayer"]}]
		},
		"move": {
			"requiredmarks": ["selectunit","selectmovetarget"],
			"effect": ["moveunit",["idofunitat","selectunit"],"selectmovetarget"]
		},
		"jump": {
			"requiredmarks": ["selectunit","selectjumptarget"],
			"effect": ["multieffect",[
				["killunit",["idofunitat",["firstposin","willdie"]]],
				["moveunit",["idofunitat","selectunit"],"selectjumptarget"]
			]]
		}
	},
	"endturn": {
		"condition": ["truthy",["contextval","performedsteps"]],
		"commandcap": true,
		"endgame": {
			"infiltration": { "condition": ["overlaps","mykings","opphomerow"], "result": "win" },
			"kingkill": { "condition": ["notempty","oppdeadkings"], "result": "win" }
		}
	}
}