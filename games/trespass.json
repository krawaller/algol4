{
	"meta": {
		"name": "Trespass",
		"source": "http://www.di.fc.ul.pt/~jpn/gv/trespass.htm",
		"tags": ["asymmetric","differentunits","infiltrate"]
	},
	"board": {"height":7,"width":11},
	"graphics": {
		"tiles": {"bases":"grass"},
		"icons": {"attackers":"pawns","defenders":"queens","strikers":"kings" }
	},
	"setup": {
		"attackers": [ ["rectangle",7001,7011,1] ],
		"defenders": [ ["positions",[2004,2005,2007,2008],2] ],
		"strikers": [ {"pos":2006,"owner":2} ]
	},
	"terrain": {
		"bases": [ ["rectangle",7001,7011,1], ["rectangle",1001,1011,2] ],
		"goals": [ ["rectangle",1001,1011,2] ]
	},
	"startturn": {
		"allow": [["mark","selectunit"]]
	},
	"endturn": {
		"endgame": {
			"infiltration": { "condition": ["overlaps","attackers","goals"] },
			"genocide": { "condition": ["isempty","oppunits"] }
		}
	},
	"marks": {
		"selectunit": {
			"from": "myunits",
			"runGenerators": ["findtargets"],
			"allow": [["mark","selectmove"]]
		},
		"selectmove": {
			"from": "movetargets",
			"allow": [["command","move"]]
		}
	},
	"commands": {
		"move": {
			"applyEffects": [
				["kill","selectmove"],
				["move","selectunit","selectmove"]
			],
			"allow": [["endturn"]]
		}
	},
	"generators": {
		"findtargets": {
			"type": "walker",
			"starts": "selectunit",
			"dirs": ["ifelse",["anyat","attackers","selectunit"],["dirs",[1]],["dirs",[1,2,3,4,5,6,7,8]]],
			"blocks": "units",
			"max": ["ifelse",["anyat","defenders","selectunit"],11,1],
			"draw": {
				"steps": {
					"condition": ["or",[
						["anyat","attackers","selectunit"],
						["noneat","bases",["contextpos","target"]]
					]],
					"tolayer": "movetargets"
				},
				"block": {
					"condition": ["and",[
						["anyat","strikers","selectunit"],
						["anyat","oppunits",["contextpos","target"]]
					]],
					"tolayer": "movetargets"
				}
			}
		}
	}
}