{
	"source": "http://www.chessvariants.org/other.dir/amazons.html",
	"graphics": {
		"background": "wood",
		"icons": { "queens": "queens", "fires": "fires" }
	},
	"board": {
		"height": 10,
		"width": 10
	},
	"setup": {
		"queens":[
			["positions",[1004,1007,4001,4010],{"owner":1}],
			["positions",[10004,10007,7001,7010],{"owner":2}]
		]
	},
	"startstep": {
		"rungenerators": ["findmymovers","findfiretargets","findoppmovers"]
	},
	"marks": {
		"selectunit": {
			"condition": ["falsy",["contextval","movedto"]],
			"fromlayer": "mymovers",
			"requiredby": ["selectmovetarget"],
			"rungenerators": ["findmovetargets"]
		},
		"selectmovetarget": {
			"requiredmarks": ["selectunit"],
			"condition": ["falsy",["contextval","movedto"]],
			"fromlayer": "movetarget"
		},
		"selectfiretarget": {
			"condition": ["truthy",["contextval","movedto"]],
			"fromlayer": "firetarget"
		}
	},
	"endturn": {
		"condition":["same",["contextval","performedsteps"],2],
		"commandcap": true,
		"endgame": {
			"blocked":{
				"condition": ["isempty","oppmovers"],
				"result": "win"
			}
		}
	},
	"commands": {
		"move": {
			"neededmarks": ["selectunit","selectmovetarget"],
			"effect": ["multieffect",[
				["moveunit",["idofunitat",["markpos","selectunit"]],["markpos","selectmovetarget"]],
				["setcontextval","movedto",["markpos","selectmovetarget"]]
			]]
		},
		"fire": {
			"neededmarks": ["selectfiretarget"],
			"effect": ["multieffect",[
				["spawnunit",["markpos","selectfiretarget"],"fires",{"owner":0}],
				["forallin","willbeblocked",
					["setunitdata",["loopid"],"group","immobilized"]
				]
			]]
		}
	},
	"generators": {
		"findmymovers": {
			"type": "nextto",
			"starts": ["allposinlayer","myunits"],
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"condition": ["noneat","units",["contextpos","target"]],
			"draw": {
				"start": {
					"condition": ["truthy",["contextval","neighbourcount"]],
					"tolayer": "mymovers"
				}
			}
		},
		"findoppmovers": {
			"type": "nextto",
			"starts": ["allposinlayer","oppunits"],
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"condition": ["noneat","units",["contextpos","target"]],
			"draw": {
				"start": {
					"condition": ["truthy",["contextval","neighbourcount"]],
					"tolayer": "oppmovers"
				}
			}
		},
		"findmovetargets": {
			"type": "walker",
			"starts": ["markpos","selectunit"],
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"blocks": ["allposinlayer","units"],
			"draw": {
				"steps": {
					"tolayer": "movetarget"
				}
			}
		},
		"findfiretargets": {
			"type": "walker",
			"starts": ["contextpos","movedto"],
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"blocks": ["allposinlayer","units"],
			"draw": {
				"steps": {
					"tolayer": "firetarget"
				}
			}
		},
		"findhindered": {
			"type": "nextto",
			"starts": ["markpos","selectfire"],
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"condition": ["anyat","movers",["contextpos","target"]],
			"draw": {
				"target": {
					"tolayer": "hindered"
				}
			}
		}
	}
}