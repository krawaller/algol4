{
	"meta": {
		"name": "Amazons",
		"source": "http://www.chessvariants.org/other.dir/amazons.html",
		"tags": ["deploy"]
	},
	"graphics": {
		"icons": { "queens": "queens", "fires": "pawns" }
	},
	"board": { "height": 10, "width": 10 },
	"setup": {
		"queens":[["positions",[1004,1007,4001,4010],1],["positions",[10004,10007,7001,7010],2]]
	},
	"startturn": {
		"allow": ["selectunit"]
	},
	"marks": {
		"selectunit": {
			"from": "myunits",
			"runGenerators": ["findtargets"],
			"allow": ["selectmovetarget"]
		},
		"selectmovetarget": {
			"canalwaysreachturnend": true,
			"from": "targets",
			"allow": ["move"]
		},
		"selectfiretarget": {
			"from": "targets",
			"allow": ["fire"]
		}
	},
	"commands": {
		"move": {
			"applyEffects": [
				["move","selectunit","selectmovetarget"],
				["setcontextval","movedto",["markpos","selectmovetarget"]]
			],
			"runGenerators": ["findtargets"],
			"allow": ["selectfiretarget"]
		},
		"fire": {
			"applyEffects": [ ["spawnunit",["markpos","selectfiretarget"],"fires",0] ],
			"allow": ["endturn"]
		}
	},
	"generators": {
		"findtargets": {
			"type": "walker",
			"starts": ["union","selectunit",["contextpos","movedto"]],
			"blocks": "units",
			"draw": {
				"steps": {
					"tolayer": "targets"
				}
			}
		}
	}
}