{
	"meta": {
		"name": "Amazons",
		"source": "http://www.chessvariants.org/other.dir/amazons.html"
	},
	"graphics": {
		"icons": { "queens": "queens", "fires": "fivestars" }
	},
	"board": { "height": 10, "width": 10 },
	"setup": { "queens":[ ["positions",[1004,1007,4001,4010],{"owner":1}], ["positions",[10004,10007,7001,7010],{"owner":2}] ] },
	"startturn": {
		"allowMarks": ["selectunit"]
	},
	"marks": {
		"selectunit": {
			"from": "myunits",
			"runGenerators": ["findmovetargets"],
			"allowMarks": ["selectmovetarget"]
		},
		"selectmovetarget": {
			"from": "movetarget",
			"allowCommands": ["move"]
		},
		"selectfiretarget": {
			"from": "firetarget",
			"allowCommands": ["fire"]
		}
	},
	"commands": {
		"move": {
			"applyEffects": [
				["moveunit",["idofunitat",["markpos","selectunit"]],["markpos","selectmovetarget"]],
				["setcontextval","movedto",["markpos","selectmovetarget"]]
			],
			"runGenerators": ["findfiretargets"],
			"allowMarks": ["selectfiretarget"]
		},
		"fire": {
			"applyEffects": [ ["spawnunit",["markpos","selectfiretarget"],"fires",0] ]
		}
	},
	"generators": {
		"findmovetargets": {
			"type": "walker",
			"starts": "selectunit",
			"blocks": "units",
			"draw": {
				"steps": {
					"tolayer": "movetarget"
				}
			}
		},
		"findfiretargets": {
			"type": "walker",
			"starts": ["contextpos","movedto"],
			"blocks": "units",
			"draw": {
				"steps": {
					"tolayer": "firetarget"
				}
			}
		}
	}
}