{
	"source": "http://www.di.fc.ul.pt/~jpn/gv/Archers.pdf",
	"board": {
		"height": 9,
		"width": 9
	},
	"terrain": {
		"trees": [
			["rectangle",2002,4004,{"owner":1}],
			["rectangle",6006,8008,{"owner":2}]
		]
	},
	"setup": [
		["list",[2002,2003,2004,3002,3004,4002,4003,4004],{"owner":1,"dir":5,"group":"archers"}],
		{"pos":3003,"group":"kings","dir":5,"owner":1},
		["list",[6006,6007,6008,7006,7008,8006,8007,8008],{"owner":2,"dir":1,"group":"archers"}],
		{"pos":3003,"group":"kings","dir":1,"owner":2}
	],
	"startstep": {
		"hydration": ["findarrows"]
	},
	"generators": {
		"findkilltargets": {
			"type": "filter",
			"layer": "bullseyes",
			"matching": {"shooterid":["is",["idofunitat",["markpos","selectunit"]]]},
			"tolayer": "gonnadie"
		},
		"findarrows": {
			"type": "walker",
			"starts": ["allposinlayer","units"],
			"dirs": ["relativedirs",["dirs",[1]],["lookup","units",["contextpos","start"],"dir"]],
			"blocks": ["allposinlayer","units"],
			"max": 3,
			"draw": {
				"step": {
					"tolayer": "arrows",
					"include": {
						"owner": ["lookup","units",["contextpos","start"],"owner"],
						"dir": ["lookup","units",["contextpos","start"],"dir"]
					}
				},
				"block": {
					"condition": ["different",
						["lookup","units",["contextpos","target"],"owner"],
						["lookup","units",["contextpos","start"],"owner"]
					],
					"tolayer": "bullseyes",
					"include": {
						"shooterid": ["idofunitat",["contextpos","start"]]
					}
				}
			}
		},
		"findfooting": {
			"type": "nextto",
			"neededmarks": ["selectunit"],
			"starts": ["markpos","selectunit"],
			"dirs": ["relativedirs",["dirs",[1,5]],["lookup","units",["contextpos","start"],"dir"]],
			"draw": {
				"target": {
					"condition": ["and",
						["noneat","units",["contextpos","target"]],
						["noneat","opparrows",["contextpos","target"]]
					],
					"tolayer": ["ifelse",
						["same",
							["contextval","dir"],
							["lookup","units",["contextpos","start"],"dir"]
						],
						"forwardfooting",
						"backwardfooting"
					],
					"include": {
						"id": ["idofunitat",["contextpos","start"]]
					}
				}
			}
		}
	},
	"marks": {
		"selectunit": {
			"fromlayer": "myunits",
			"cleanse": ["forwardfooting","backwardfooting","gonnadie"],
			"hydration": ["findfooting","findkilltargets"]
		}
	},
	"endturn": {
		"condition":["same",["contextval","performedsteps"],2],
		"commandcap": true,
		"passto": ["ifelse",["same",["contextval","currentplayer"],2],1,2],
		"endgame": {
			"infiltration": {
				"condition": [["overlaps","myunits","opptrees"],["contextval","currentplayer"]]
			},
			"kingkill": {
				"condition": [["notempty","oppdeadkings"],["contextval","currentplayer"]]
			}
		}
	},
	"commands": {
		"stepforward": {
			"condition": ["notempty","forwardfooting"],
			"effect": ["moveunit",["idofunitat",["markpos","selectunit"]],["firstposin","forwardfooting"]],
			"setmarks": {
				"selectunit": ["firstposin","forwardfooting"]
			}
		},
		"stepbackward": {
			"condition": ["notempty","backwardfooting"],
			"effect": ["moveunit",["idofunitat",["markpos","selectunit"]],["firstposin","backwardfooting"]],
			"setmarks": {
				"selectunit": ["firstposin","backwardfooting"]
			}
		},
		"turnleft": {
			"effect": ["turnunit",["idofunitat",["markpos","selectunit"]],-2]
		},
		"turnright": {
			"effect": ["turnunit",["idofunitat",["markpos","selectunit"]],2]
		},
		"fire": {
			"condition": ["and",
				["notempty","gonnadie"],
				["not",["affected",["idofunitat",["markpos","selectunit"]]]]
			],
			"effect": ["killunit",["idofunitat",["firstposin","gonnadie"]]]
		}
	}
}