{
	"source": "http://www.di.fc.ul.pt/~jpn/gv/Archers.pdf",
	"board": {
		"height": 9,
		"width": 9,
		"terrain": {
			"2002": {"type":"base","owner":1}, "2003": {"type":"base","owner":1}, "2004": {"type":"base","owner":1},
			"3002": {"type":"base","owner":1}, "3003": {"type":"base","owner":1}, "3004": {"type":"base","owner":1},
			"4002": {"type":"base","owner":1}, "4003": {"type":"base","owner":1}, "4004": {"type":"base","owner":1},
			"6006": {"type":"base","owner":2}, "6007": {"type":"base","owner":2}, "6008": {"type":"base","owner":2},
			"7006": {"type":"base","owner":2}, "7007": {"type":"base","owner":2}, "7008": {"type":"base","owner":2},
			"8006": {"type":"base","owner":2}, "8007": {"type":"base","owner":2}, "8008": {"type":"base","owner":2}
		},
		"setup": [
			{"POS":2002,"type":"archer","DIR":5,"PLR":1},{"POS":2003,"type":"archer","DIR":5,"PLR":1},{"POS":2004,"type":"archer","DIR":5,"PLR":1},
			{"POS":3002,"type":"archer","DIR":5,"PLR":1},{"POS":3003,"type":"king","DIR":5,"PLR":1},{"POS":3004,"type":"archer","DIR":5,"PLR":1},
			{"POS":4002,"type":"archer","DIR":5,"PLR":1},{"POS":4003,"type":"archer","DIR":5,"PLR":1},{"POS":4004,"type":"archer","DIR":5,"PLR":1},
			{"POS":6006,"type":"archer","DIR":1,"PLR":2},{"POS":6007,"type":"archer","DIR":1,"PLR":2},{"POS":6008,"type":"archer","DIR":1,"PLR":2},
			{"POS":7006,"type":"archer","DIR":1,"PLR":2},{"POS":7007,"type":"king","DIR":1,"PLR":2},{"POS":7008,"type":"archer","DIR":1,"PLR":2},
			{"POS":8006,"type":"archer","DIR":1,"PLR":2},{"POS":8007,"type":"archer","DIR":1,"PLR":2},{"POS":8008,"type":"archer","DIR":1,"PLR":2}
		]
	},
	"hydration": ["findarrows"],
	"generators": {
		"findinfiltrators": {
			"type": "filter",
			"layer": "TERRAIN",
			"matching": {"owner":["ISNT",["CONTEXTVAL","CURRENTPLAYER"]]},
			"condition": ["ANYAT","MYUNITS",["CONTEXTPOS","START"]],
			"tolayer": ["VAL","infiltrators"]
		},
		"findkilltargets": {
			"neededmarks": ["selectunit"],
			"type": "filter",
			"layer": "bullseye",
			"matching": {"shooterid":["IS",["IDAT",["MARKPOS","selectunit"]]]},
			"tolayer": ["VAL","gonnadie"]
		},
		"finddeadkings": {
			"type": "filter",
			"layer": "DEADUNITS",
			"matching": { "type": ["IS",["VAL","crown"]] },
			"tolayer": ["VAL","deadking"]
		},
		"findarrows": {
			"type": "walker",
			"starts": ["FROMALLINLAYER","UNITS"],
			"dirs": ["RELATIVEDIRS",["DIRS",[1]],["LOOKUP","UNITS",["CONTEXTPOS","START"],"DIR"]],
			"blocks": ["FROMALLINLAYER","UNITS"],
			"max": 3,
			"draw": {
				"step": {
					"tolayer": ["IFELSE",["SAME",["LOOKUP","UNITS",["CONTEXTPOS","START"],"PLR"],["CONTEXTVAL","CURRENTPLAYER"]],"myarrows","opparrows"]
				},
				"block": {
					"condition": ["DIFFERENT",["LOOKUP","UNITS",["CONTEXTPOS","TARGET"],"PLR"],["LOOKUP","UNITS",["CONTEXTPOS","START"],"PLR"]],
					"tolayer": ["VAL","bullseye"],
					"include": {
						"shooterid": ["IDAT",["CONTEXTPOS","START"]]
					}
				}
			}
		},
		"findfooting": {
			"type": "nextto",
			"neededmarks": ["selectunit"],
			"starts": ["FROMSINGLEPOS",["MARKPOS","selectunit"]],
			"dirs": ["RELATIVEDIRS",["DIRS",[1,5]],["LOOKUP","UNITS",["CONTEXTPOS","START"],"DIR"]],
			"draw": {
				"target": {
					"condition": ["AND",["NONEAT","UNITS",["CONTEXTPOS","TARGET"]],["NONEAT","opparrows",["CONTEXTPOS","TARGET"]]],
					"tolayer": ["IFELSE",["SAME",["CONTEXTVAL","DIR"],["LOOKUP","UNITS",["CONTEXTPOS","START"],"DIR"]],"forwardfooting","backwardfooting"],
					"include": {
						"id": ["IDAT",["CONTEXTPOS","START"]]
					}
				}
			}
		}
	},
	"marks": {
		"selectunit": {
			"from":["FROMALLINLAYER","MYUNITS"],
			"cleanse": ["forwardfooting","backwardfooting","gonnadie"],
			"hydration": ["findfooting","findkilltargets"]
		}
	},
	"endturn": {
		"condition":["SAME",["CONTEXTVAL","PERFORMEDSTEPS"],["VAL",2]],
		"commandcap": true,
		"hydration": ["findinfiltrators","finddeadkings"],
		"passto": ["IFELSE",["SAME",["CONTEXTVAL","CURRENTPLAYER"],["VAL",2]],["VAL",1],["VAL",2]],
		"endgame": {
			"infiltration":[["NOTEMPTY","infiltrators"],["CONTEXTVAL","CURRENTPLAYER"]],
			"kingkill":[["NOTEMPTY","deadking"],["CONTEXTVAL","CURRENTPLAYER"]]
		}
	},
	"commands": {
		"stepforward": {
			"condition": ["NOTEMPTY","forwardfooting"],
			"effect": ["MOVEUNIT",["IDAT",["MARKPOS","selectunit"]],["ONLYPOSIN","forwardfooting"]],
			"setmarks": {
				"selectunit": ["ONLYPOSIN","forwardfooting"]
			}
		},
		"stepbackward": {
			"condition": ["NOTEMPTY","backwardfooting"],
			"effect": ["MOVEUNIT",["IDAT",["MARKPOS","selectunit"]],["ONLYPOSIN","backwardfooting"]],
			"setmarks": {
				"selectunit": ["ONLYPOSIN","backwardfooting"]
			}
		},
		"turnleft": {
			"effect": ["TURNUNIT",["IDAT",["MARKPOS","selectunit"]],["VAL",-2]]
		},
		"turnright": {
			"effect": ["TURNUNIT",["IDAT",["MARKPOS","selectunit"]],["VAL",2]]
		},
		"fire": {
			"condition": ["AND",["NOTEMPTY","gonnadie"],["NOT",["AFFECTED",["IDAT",["MARKPOS","selectunit"]]]]],
			"effect": ["KILLUNIT",["IDAT",["ONLYPOSIN","gonnadie"]]]
		}
	}
}