{
	"name": "Archers",
	"source": "http://www.di.fc.ul.pt/~jpn/gv/Archers.pdf",
	"board": { "height": 9, "width": 9 },
	"graphics": {
		"tiles": { "trees": "grass" },
		"icons": { "archers": "bow", "kings": "king", "arrows": "projectiles" },
		"turnvars": { "nonfiremoves": "moves left" }
	},
	"terrain": {
		"trees": [
			["rectangle",2002,4004,{"owner":1}],
			["rectangle",6006,8008,{"owner":2}]
		]
	},
	"setup": {
		"archers": [
			["positions",[2002,2003,2004,3002,3004,4002,4003,4004],{"owner":1,"dir":5}],
			["positions",[6006,6007,6008,7006,7008,8006,8007,8008],{"owner":2,"dir":1}]
		],
		"kings": [{"pos":3003,"dir":5,"owner":1},{"pos":7007,"dir":1,"owner":2}]
	},
	"startstep": {
		"rungenerators": ["findarrows"]
	},
	"generators": {
		"findkilltargets": {
			"type": "filter",
			"layer": "bullseyes",
			"matching": {"parentid":["is",["idofunitat",["markpos","selectunit"]]]},
			"tolayer": "gonnadie"
		},
		"findarrows": {
			"type": "walker",
			"starts": "units",
			"dirs": ["relativedirs",["dirs",[1]],["lookup","units",["contextpos","start"],"dir"]],
			"blocks": "units",
			"max": 3,
			"draw": {
				"steps": {
					"tolayer": "arrows",
					"include": {
						"parentid": ["idofunitat",["contextpos","start"]],
						"suffix": ["contextval","step"],
						"owner": ["lookup","units",["contextpos","start"],"owner"],
						"dir": ["lookup","units",["contextpos","start"],"dir"]
					}
				},
				"block": {
					"condition": ["different",
						["lookup","units",["contextpos","target"],"owner"],
						["lookup","units",["contextpos","start"],"owner"]
					],
					"tolayer": "bullseyes",
					"include": {
						"suffix": ["contextval","step"],
						"parentid": ["idofunitat",["contextpos","start"]]
					}
				}
			}
		},
		"findfooting": {
			"type": "nextto",
			"requiredmarks": ["selectunit"],
			"starts": "selectunit",
			"dirs": ["relativedirs",["dirs",[1,5]],["lookup","units",["contextpos","start"],"dir"]],
			"draw": {
				"target": {
					"condition": ["and",[
						["noneat","units",["contextpos","target"]],
						["noneat","opparrows",["contextpos","target"]]
					]],
					"tolayer": ["ifelse",
						["same",
							["contextval","dir"],
							["lookup","units",["contextpos","start"],"dir"]
						],
						"forwardfooting",
						"backwardfooting"
					],
					"include": {
						"id": ["idofunitat",["contextpos","start"]]
					}
				}
			}
		}
	},
	"marks": {
		"selectunit": {
			"from": "myunits",
			"cleanse": ["forwardfooting","backwardfooting","gonnadie"],
			"rungenerators": ["findfooting","findkilltargets"]
		}
	},
	"startturn": {
		"applyeffect": ["setcontextval","nonfiremoves",2]
	},
	"endturn": {
		"condition":["falsy",["contextval","nonfiremoves"]],
		"commandcap": true,
		"passto": ["contextval","nextplayer"],
		"endgame": {
			"infiltration": {"condition":["overlaps","myunits","opptrees"],"result":"win"},
			"kingkill": {"condition":["notempty","oppdeadkings"],"result":"win"}
		}
	},
	"commands": {
		"stepforward": {
			"requiredmarks": ["selectunit"],
			"condition": ["notempty","forwardfooting"],
			"effect": ["multieffect",[
				["setcontextval",["idofunitat",["markpos","selectunit"]],"hasmoved"],
				["moveunit",["idofunitat",["markpos","selectunit"]],["firstposin","forwardfooting"]],
				["addtocontextval","nonfiremoves",-1]
			]],
			"setmarks": {
				"selectunit": ["firstposin","forwardfooting"]
			}
		},
		"stepbackward": {
			"requiredmarks": ["selectunit"],
			"condition": ["notempty","backwardfooting"],
			"effect": ["multieffect",[
				["setcontextval",["idofunitat",["markpos","selectunit"]],"hasmoved"],
				["moveunit",["idofunitat",["markpos","selectunit"]],["firstposin","backwardfooting"]],
				["addtocontextval","nonfiremoves",-1]
			]],
			"setmarks": { "selectunit": ["firstposin","backwardfooting"] }
		},
		"turnleft": {
			"requiredmarks": ["selectunit"],
			"effect": ["multieffect",[
				["setcontextval",["idofunitat",["markpos","selectunit"]],"hasmoved"],
				["turnunit",["idofunitat",["markpos","selectunit"]],-2],
				["addtocontextval","nonfiremoves",-1]
			]],
			"setmarks": { "selectunit": ["markpos","selectunit"] }
		},
		"turnright": {
			"requiredmarks": ["selectunit"],
			"effect": ["multieffect",[
				["setcontextval",["idofunitat",["markpos","selectunit"]],"hasmoved"],
				["turnunit",["idofunitat",["markpos","selectunit"]],2],
				["addtocontextval","nonfiremoves",-1]
			]],
			"setmarks": { "selectunit": ["markpos","selectunit"] }
		},
		"fire": {
			"requiredmarks": ["selectunit"],
			"condition": ["and",[
				["notempty","gonnadie"],
				["falsy",["contextval",["idofunitat",["markpos","selectunit"]]]],
				["same",["contextval","nonfiremoves"],2]
			]],
			"effect": ["multieffect",[
				["setcontextval",["idofunitat",["markpos","selectunit"]],"hasmoved"],
				["killunit",["idofunitat",["firstposin","gonnadie"]]]
			]],
			"setmarks": { "selectunit": ["markpos","selectunit"] }
		}
	}
}