{
	"source": "http://www.di.fc.ul.pt/~jpn/gv/Archers.pdf",
	"board": {
		"height": 9,
		"width": 9
	},
	"terrain": {
		"bases": [
			["ALL",[2002,2003,2004,3002,3003,3004,4002,4003,4004],{"owner":1}],
			["ALL",[6006,6007,6008,7006,7007,7008,8006,8007,8008],{"owner":2}]
		]
	},
	"setup": [
		["ALL",[2002,2003,2004,3002,3004,4002,4003,4004],{"PLR":1,"DIR":5,"type":"archer"}],
		{"POS":3003,"type":"king","DIR":5,"PLR":1},
		["ALL",[6006,6007,6008,7006,7008,8006,8007,8008],{"PLR":2,"DIR":1,"type":"archer"}],
		{"POS":3003,"type":"king","DIR":1,"PLR":2}
	],
	"startstep": {
		"cleanse": ["myarrows","opparrows","bullseye"],
		"hydration": ["findarrows"]
	},
	"generators": {
		"findinfiltrators": {
			"type": "filter",
			"layer": "TERRAIN",
			"matching": {"owner":["ISNT",["CONTEXTVAL","CURRENTPLAYER"]]},
			"condition": ["ANYAT","MYUNITS",["CONTEXTPOS","START"]],
			"tolayer": ["LAYERNAME","infiltrators"]
		},
		"findkilltargets": {
			"neededmarks": ["selectunit"],
			"type": "filter",
			"layer": "bullseye",
			"matching": {"shooterid":["IS",["IDAT",["MARKPOS","selectunit"]]]},
			"tolayer": ["LAYERNAME","gonnadie"]
		},
		"finddeadkings": {
			"type": "filter",
			"layer": "DEADUNITS",
			"matching": { "type": ["IS",["VAL","crown"]] },
			"tolayer": ["LAYERNAME","deadking"]
		},
		"findarrows": {
			"type": "walker",
			"starts": ["FROMALLINLAYER","UNITS"],
			"dirs": ["RELATIVEDIRS",["DIRS",[1]],["LOOKUP","UNITS",["CONTEXTPOS","START"],"DIR"]],
			"blocks": ["FROMALLINLAYER","UNITS"],
			"max": 3,
			"draw": {
				"step": {
					"tolayer": ["IFELSE",
						["SAME",["LOOKUP","UNITS",["CONTEXTPOS","START"],"PLR"],["CONTEXTVAL","CURRENTPLAYER"]],
						["LAYERNAME","myarrows"],
						["LAYERNAME","opparrows"]
					]
				},
				"block": {
					"condition": ["DIFFERENT",["LOOKUP","UNITS",["CONTEXTPOS","TARGET"],"PLR"],["LOOKUP","UNITS",["CONTEXTPOS","START"],"PLR"]],
					"tolayer": ["LAYERNAME","bullseye"],
					"include": {
						"shooterid": ["IDAT",["CONTEXTPOS","START"]]
					}
				}
			}
		},
		"findfooting": {
			"type": "nextto",
			"neededmarks": ["selectunit"],
			"starts": ["FROMSINGLEPOS",["MARKPOS","selectunit"]],
			"dirs": ["RELATIVEDIRS",["DIRS",[1,5]],["LOOKUP","UNITS",["CONTEXTPOS","START"],"DIR"]],
			"draw": {
				"target": {
					"condition": ["AND",["NONEAT","UNITS",["CONTEXTPOS","TARGET"]],["NONEAT","opparrows",["CONTEXTPOS","TARGET"]]],
					"tolayer": ["IFELSE",["SAME",["CONTEXTVAL","DIR"],["LOOKUP","UNITS",["CONTEXTPOS","START"],"DIR"]],["LAYERNAME","forwardfooting"],["LAYERNAME","backwardfooting"]],
					"include": {
						"id": ["IDAT",["CONTEXTPOS","START"]]
					}
				}
			}
		}
	},
	"marks": {
		"selectunit": {
			"from":["FROMALLINLAYER","MYUNITS"],
			"cleanse": ["forwardfooting","backwardfooting","gonnadie"],
			"hydration": ["findfooting","findkilltargets"]
		}
	},
	"endturn": {
		"condition":["SAME",["CONTEXTVAL","PERFORMEDSTEPS"],["VAL",2]],
		"commandcap": true,
		"passto": ["IFELSE",["SAME",["CONTEXTVAL","CURRENTPLAYER"],["VAL",2]],["VAL",1],["VAL",2]],
		"endgame": {
			"infiltration": {
				"hydration": ["findinfiltrators"],
				"condition": [["NOTEMPTY","infiltrators"],["CONTEXTVAL","CURRENTPLAYER"]]
			},
			"kingkill": {
				"hydration": ["finddeadkings"],
				"condition": [["NOTEMPTY","deadking"],["CONTEXTVAL","CURRENTPLAYER"]]
			}
		}
	},
	"commands": {
		"stepforward": {
			"condition": ["NOTEMPTY","forwardfooting"],
			"effect": ["MOVEUNIT",["IDAT",["MARKPOS","selectunit"]],["ONLYPOSIN","forwardfooting"]],
			"setmarks": {
				"selectunit": ["ONLYPOSIN","forwardfooting"]
			}
		},
		"stepbackward": {
			"condition": ["NOTEMPTY","backwardfooting"],
			"effect": ["MOVEUNIT",["IDAT",["MARKPOS","selectunit"]],["ONLYPOSIN","backwardfooting"]],
			"setmarks": {
				"selectunit": ["ONLYPOSIN","backwardfooting"]
			}
		},
		"turnleft": {
			"effect": ["TURNUNIT",["IDAT",["MARKPOS","selectunit"]],["VAL",-2]]
		},
		"turnright": {
			"effect": ["TURNUNIT",["IDAT",["MARKPOS","selectunit"]],["VAL",2]]
		},
		"fire": {
			"condition": ["AND",
				["NOTEMPTY","gonnadie"],
				["NOT",["AFFECTED",["IDAT",["MARKPOS","selectunit"]]]]
			],
			"effect": ["KILLUNIT",["IDAT",["ONLYPOSIN","gonnadie"]]]
		}
	}
}