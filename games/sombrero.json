{
	"name": "Sombrero",
	"source": "http://www.abstractstrategy.com/sombrero-rules.html",
	"graphics": {
		"icons": {"soldiers":"soldiers","kings":"kings"},
		"turnvars": { "movesleft": "moves left" }
	},
	"board": { "height": 8, "width": 8 },
	"setup": {
		"kings": [
			["positions",[1001,1002,1003,1004,8005,8006,8007,8008],{"owner":1}],
			["positions",[1005,1006,1007,1008,8001,8002,8003,8004],{"owner":2}]
		]
	},
	"startturn": { "applyeffect": ["setcontextval","movesleft",2] },
	"endturn": {
		"condition":["falsy",["contextval","movesleft"]],
		"commandcap": true,
		"endgame": {
			"kingkill": {
				"condition": ["morethan",2,["positionsin","oppkings"]],"result":"win"
			}
		}
	},
	"marks": {
		"selectking": {
			"fromlayer": "mykings",
			"cleanse": ["movetarget","swaptarget"],
			"rungenerators": ["findtargets","findsecondtargets"],
			"requiredby": ["selectswap","selectmove"]
		},
		"selectswap": {
			"fromlayer": "swaptarget",
			"notwith": ["selectmove"],
			"requiredmarks": ["selectking"]
		},
		"selectmove": {
			"fromlayer": "movetarget",
			"notwith": ["selectswap"],
			"cleanse": ["demoted"],
			"rungenerators": ["finddemotees"],
			"requiredmarks": ["selectking"]
		}
	},
	"commands": {
		"swap": {
			"neededmarks": ["selectswap"],
			"effect": ["multieffect",[
				["setunitdata",["idofunitat",["markpos","selectking"]],"group","soldiers"],
				["setunitdata",["idofunitat",["markpos","selectswap"]],"group","kings"],
				["forallin","demoted",
					["setunitdata",["loopid"],"group","soldiers"]
				],
				["addtocontextval","movesleft",-1]
			]]
		},
		"move": {
			"neededmarks": ["selectmove"],
			"effect": ["multieffect",[
				["moveunit",["idofunitat",["markpos","selectking"]],["markpos","selectmove"]],
				["forallin","demoted",
					["setunitdata",["loopid"],"group","soldiers"]
				],
				["addtocontextval","movesleft",["lookup","movetarget",["markpos","selectmove"],"cost"]]
			]]
		}
	},
	"generators": {
		"findtargets": {
			"type": "nextto",
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"starts": ["markpos","selectking"],
			"condition": ["and",[
				["noneat","oppunits",["contextpos","target"]],
				["noneat","mykings",["contextpos","target"]]
			]],
			"draw": {
				"target": {
					"tolayer": ["ifelse",
						["anyat","mysoldiers",["contextpos","target"]],
						"swaptarget","movetarget"
					],
					"include": { "cost": -1 }
				}
			}
		},
		"findsecondtargets": {
			"type": "nextto",
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"starts": ["allposinlayer","movetarget"],
			"condition": ["and",[
				["same",["contextval","movesleft"],2],
				["noneat","movetarget",["contextpos","target"]],
				["noneat","units",["contextpos","target"]]
			]],
			"draw": {
				"target": {
					"tolayer": "movetarget",
					"include": { "cost": -2 }
				}
			}
		},
		"finddemotees": {
			"type": "walker",
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"starts": ["markpos","selectmove"],
			"steps": ["allposinlayer","oppunits"],
			"blocks": ["allposinlayer","mykings"],
			"prioritizeblocksoversteps":true,
			"draw": {
				"steps": {
					"condition": ["and",[
						["same",["contextval","stopreason"],"hitblock"],
						["anyat","oppkings",["contextpos","target"]]
					]],
					"tolayer": "demoted"
				}
			}
		}
	}
}