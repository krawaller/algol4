{
	"name": "Castle",
	"source": "http://www.di.fc.ul.pt/~jpn/gv/castle.htm",
	"board": {
		"width": 19,
		"height": 19
	},
	"graphics": {
		"tiles": {"walls":"castle","thrones":"grass"},
		"icons": {"soldiers":"soldiers"}
	},
	"terrain": {
		"walls": [
			["rectangle",2003,8003],["rectangle",1006,6006],["rectangle",2008,6008],["rectangle",2012,6012],
			["rectangle",1014,6014],["rectangle",2017,8017],["rectangle",8003,8009],["rectangle",8011,8016],
			["rectangle",6009,6011],{"pos":2009},{"pos":2011},
			["rectangle",12003,18003],["rectangle",14006,19006],["rectangle",14008,18008],["rectangle",14012,18012],
			["rectangle",14014,19014],["rectangle",12017,18017],["rectangle",12003,12009],["rectangle",12011,12016],
			["rectangle",14009,14011],{"pos":18009},{"pos":18011}
		],
		"thrones": [{"pos":4010,"owner":1},{"pos":16010,"owner":2}]
	},
	"setup": {
		"soldiers": [
			["positions",[1006,1014,2008,2012,6008,6012,8003,8017],{"owner":1}],
			["positions",[19006,19014,18008,18012,14008,14012,12003,12017],{"owner":2}]
		]
	},
	"generators": {
		"findhops": {
			"type": "nextto",
			"starts": "selectunit",
			"dirs": ["dirs",[1,3,5,7]],
			"condition": ["or",[
				["and",[ ["anyat","walls",["contextpos","start"]],["noneat","walls",["contextpos","target"]] ]],
				["and",[ ["noneat","walls",["contextpos","start"]],["anyat","walls",["contextpos","target"]] ]]
			]],
			"draw": {
				"target": {
					"tolayer": ["ifelse",["anyat","oppunits",["contextpos","target"]],"killtargets","movetargets"]
				}
			}
		},
		"findslides": {
			"type": "walker",
			"dirs": ["dirs",[1,3,5,7]],
			"starts": "selectunit",
			"steps": ["ifelse",["anyat","walls",["contextpos","start"]],"walls",["subtract","board",["union","walls","mythrones"]]],
			"blocks": "units",
			"draw": {
				"steps": {
					"tolayer": "movetargets"
				},
				"block": {
					"condition": ["anyat","oppunits",["contextpos","target"]],
					"tolayer": "killtargets"
				}
			}
		}
	},
	"marks": {
		"selectunit": {
			"from": "myunits",
			"rungenerators": ["findhops","findslides"],
			"cleanse": ["movetargets","killtargets"],
			"requiredby": ["selectmovetarget","selectkilltarget"]
		},
		"selectmovetarget": {
			"requires": ["selectunit"],
			"from": "movetargets",
			"notifhasmark": ["selectkilltarget"]
		},
		"selectkilltarget": {
			"requires": ["selectunit"],
			"from": "killtargets",
			"notifhasmark": ["selectmovetarget"]
		}
	},
	"commands": {
		"move": {
			"neededmarks": ["selectunit","selectmovetarget"],
			"effect": ["moveunit",["idofunitat","selectunit"],"selectmovetarget"]
		},
		"kill": {
			"neededmarks": ["selectunit","selectkilltarget"],
			"effect": ["multieffect",[
				["killunit",["idofunitat","selectkilltarget"]],
				["moveunit",["idofunitat","selectunit"],"selectkilltarget"]
			]]
		}
	},
	"endturn": {
		"condition": ["truthy",["contextval","performedsteps"]],
		"commandcap": true,
		"endgame": {
			"infiltration": { "condition": ["overlaps","myunits","oppthrones"], "result": "win" },
			"genocide": { "condition": ["isempty","oppunits"], "result": "win" }
		}
	}
}





