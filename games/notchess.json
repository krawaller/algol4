{
	"meta": {
		"name": "Notchess redux",
		"source": "http://www.di.fc.ul.pt/~jpn/gv/notchess.htm",
		"tags": [],
		"author": "Ronald Brierley",
		"year": 2003
	},
	"graphics": {"icons":{"knights":"knights","soldiers":"pawns"}},
	"board": {"height":6,"width":6},
	"setup": {
		"knights": {
			"1": ["b1","d1"],
			"2": ["c6","e6"]
		},
		"soldiers": {
			"1": ["c1","e1"],
			"2": ["b6","d6"]
		}
	},
	"startturn": {
		"runGenerators": ["findsoldiermoves","findknightmoves"],
		"allow": ["selectunit"]
	},
	"generators": {
		"findsoldiermoves": {
			"type": "nextto",
			"starts": "mysoldiers",
			"dirs": ["dirs",[1,3,5,7]],
			"count": "oppunits",
			"draw": {
				"start": {
					"condition": ["truthy",["contextval","countotal"]],
					"tolayer": "cankill"
				},
				"target": {
					"tolayer": "movetargets",
					"include": {"id":["idofunitat",["contextpos","target"]]}
				}
			}
		}
	}
}