{
	"name": "Daggers",
	"source": "http://www.di.fc.ul.pt/~jpn/gv/daggers.htm",
	"board": { "height": 8, "width": 8 },
	"graphics": {
		"tiles": { "bases": "grass" },
		"icons": { "daggers": "bishops", "crowns": "kings" }
	},
	"terrain": {
		"bases": [
			["rectangle",1001,1008,{"owner":1}],
			["rectangle",8001,8008,{"owner":2}]
		]
	},
	"setup": {
		"crowns": [
			["positions",[1004,1005],{"owner":1}],
			["positions",[8003,8006],{"owner":2}]
		],
		"daggers": [
			["rectange",2003,2006,{"owner":1}],
			["positions",[6003,6006],{"owner":2}],
			["rectangle",7002,7007,{"owner":2}]
		]
	},
	"endturn": {
		"condition":["truthy",["contextval","performedsteps"]],
		"commandcap": true,
		"endgame": {
			"infiltration":{ "condition": ["overlaps","mycrowns","oppbases"], "result": "win" },
			"kingkill": { "condition": ["notempty","oppdeadcrowns"], "result": "win" }
		}
	},
	"startturn": {
		"rungenerators": ["findcrowntargets","findtargetsabovedagger","findtargetsbelowdagger"]
	},
	"marks": {
		"selectunit": {
			"from": "myunits",
			"rungenerators": ["findcurrentmovetargets","findcurrentkilltargets"],
			"cleanse": ["currentmovetargets","currentkilltargets"],
			"requiredby": ["selectmovetarget","selectkilltarget"]
		},
		"selectmovetarget": {
			"from": "currentmovetargets",
			"notwith": ["selectkilltarget"],
			"requiredmarks": ["selectunit"]
		},
		"selectkilltarget": {
			"from": "currentkilltargets",
			"notwith": ["selectmovetarget"],
			"requiredmarks": ["selectunit"]
		}
	},
	"commands": {
		"move": {
			"requiredmarks": ["selectunit","selectmovetarget"],
			"effect": ["moveunit",["idofunitat",["markpos","selectunit"]],["markpos","selectmovetarget"]]
		},
		"kill": {
			"requiredmarks": ["selectunit","selectkilltarget"],
			"effect": ["multieffect",[
				["killunit",["idofunitat",["markpos","selectkilltarget"]]],
				["moveunit",["idofunitat",["markpos","selectunit"]],["markpos","selectkilltarget"]]
			]]
		}
	},
	"generators": {
		"findcurrentmovetargets": {
			"type": "filter",
			"layer": "movetarget",
			"matching": {
				"id": ["is",["idofunitat",["markpos","selectunit"]]]
			},
			"tolayer": "currentmovetargets"
		},
		"findcurrentkilltargets": {
			"type": "filter",
			"layer": "killtarget",
			"matching": {
				"id": ["is",["idofunitat",["markpos","selectunit"]]]
			},
			"tolayer": "currentkilltargets"
		},
		"findcrowntargets": {
			"type": "nextto",
			"starts": "mycrowns",
			"dirs": ["dirs",[1,2,3,4,5,6,7,8]],
			"draw": {
				"target": {
					"condition": ["noneat","myunits",["contextpos","target"]],
					"tolayer": ["ifelse",["anyat","oppunits",["contextpos","target"]],"killtarget","movetarget"],
					"include": { "id": ["idofunitat",["contextpos","start"]] }
				}
			}
		},
		"findtargetsabovedagger": {
			"type": "nextto",
			"starts": "mydaggers",
			"dirs": ["dirs",[8,1,2]],
			"draw": {
				"target": {
					"condition": ["and",[
						["noneat","myunits",["contextpos","target"]],
						["not",["and",[
							["same",["contextval","dir"],1],
							["anyat","oppdaggers",["contextpos","target"]]
						]]]
					]],
					"tolayer": ["ifelse",["anyat","units",["contextpos","target"]],"killtarget","movetarget"],
					"include": { "id": ["idofunitat",["contextpos","start"]] }
				}
			}
		},
		"findtargetsbelowdagger": {
			"type": "walker",
			"starts": "mydaggers",
			"dirs": ["dirs",[4,5,6]],
			"blocks": "units",
			"draw": {
				"steps": {
					"tolayer": "movetarget",
					"include": { "id": ["idofunitat",["contextpos","start"]] }
				},
				"block": {
					"condition": ["and",[
						["noneat","myunits",["contextpos","target"]],
						["not",["and",[
							["same",["contextval","dir"],["val",5]],
							["anyat","oppdaggers",["contextpos","target"]]
						]]]
					]],
					"tolayer": ["ifelse",["anyat","units",["contextpos","target"]],"killtarget","movetarget"],
					"include": { "id": ["idofunitat",["contextpos","start"]] }
				}
			}
		}
	}
}