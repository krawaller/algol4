{
	"meta": {
		"name": "Daggers",
		"source": "http://www.di.fc.ul.pt/~jpn/gv/daggers.htm",
		"tags": ["differentunits","asymmetric","multiplegoals"]
	},
	"board": { "height": 8, "width": 8 },
	"graphics": {
		"tiles": { "bases": "grass" },
		"icons": { "daggers": "bishops", "crowns": "kings" }
	},
	"terrain": {
		"bases": [
			["rectangle",1001,1008,1],
			["rectangle",8001,8008,2]
		]
	},
	"setup": {
		"crowns": [
			["positions",[1004,1005],1],
			["positions",[8003,8006],2]
		],
		"daggers": [
			["rectange",2003,2006,1],
			["positions",[6003,6006],2],
			["rectangle",7002,7007,2]
		]
	},
	"endturn": {
		"endgame": {
			"infiltration":{ "condition": ["overlaps","mycrowns","oppbases"], "result": "win" },
			"kingkill": { "condition": ["notempty","oppdeadcrowns"], "result": "win" }
		}
	},
	"startturn": {
		"allow": [ ["mark","selectunit"] ]
	},
	"marks": {
		"selectunit": {
			"from": "myunits",
			"runGenerators": ["findcrowntargets","findtargetsabovedagger","findtargetsbelowdagger"],
			"allow": [ ["mark","selectmovetarget"] ]
		},
		"selectmovetarget": {
			"from": "movetarget",
			"allow": [ ["command","move"] ]
		}
	},
	"commands": {
		"move": {
			"applyEffects": [
				["kill","selectmovetarget"],
				["move","selectunit","selectmovetarget"]
			],
			"allow": [["endturn"]]
		}
	},
	"generators": {
		"findcrowntargets": {
			"type": "nextto",
			"starts": ["intersect","selectunit","mycrowns"],
			"draw": {
				"target": {
					"condition": ["noneat","myunits",["contextpos","target"]],
					"tolayer": ["ifelse",["anyat","oppunits",["contextpos","target"]],"killtarget","movetarget"]
				}
			}
		},
		"findtargetsabovedagger": {
			"type": "nextto",
			"starts": ["intersect","selectunit","mydaggers"],
			"dirs": ["dirs",[8,1,2]],
			"draw": {
				"target": {
					"condition": ["and",[
						["noneat","myunits",["contextpos","target"]],
						["not",["and",[
							["same",["contextval","dir"],1],
							["anyat","oppdaggers",["contextpos","target"]]
						]]]
					]],
					"tolayer": "movetarget"
				}
			}
		},
		"findtargetsbelowdagger": {
			"type": "walker",
			"starts": ["intersect","selectunit","mydaggers"],
			"dirs": ["dirs",[4,5,6]],
			"blocks": "units",
			"draw": {
				"steps": {
					"tolayer": "movetarget"
				},
				"block": {
					"condition": ["and",[
						["noneat","myunits",["contextpos","target"]],
						["not",["and",[
							["same",["contextval","dir"],["val",5]],
							["anyat","oppdaggers",["contextpos","target"]]
						]]]
					]],
					"tolayer": "movetarget"
				}
			}
		}
	}
}